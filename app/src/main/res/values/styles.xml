<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!--tema dell'applicazione -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">

        <!--parametri del tema -->
        <item name="colorPrimary">@color/material_dynamic_primary40</item>
        <item name="colorPrimaryDark">@color/design_default_color_primary_dark</item>
        <item name="colorAccent">#00FF00</item>
        <item name="android:windowBackground">@color/design_default_color_background</item>

        <!--cancellare l'actiobar -->
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="ToolbarTeme" parent="ThemeOverlay.MaterialComponents.ActionBar">
        <item name="android:textColorPrimary">@android:color/white</item>
        <item name="android:textColorSecondary">#EEEEEE</item>
    </style>

</resources>